<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
    <id>com.github.fushinari.Wordbook</id>
    <metadata_license>CC0-1.0</metadata_license>
    <project_license>GPL-3.0-or-later</project_license>

    <name>Wordbook</name>
    <summary>Lookup definitions for any English term</summary>
    <description>
        <p>Wordbook is an offline English-English dictionary application powered by WordNet and eSpeak.</p>
        <p>Features:</p>
        <ul>
            <li>Fully offline after initial data download</li>
            <li>Pronunciations</li>
            <li>Random Word</li>
            <li>Live Search</li>
            <li>Double click to search</li>
            <li>Dark mode</li>
        </ul>
    </description>

    <developer_name>Mufeed Ali</developer_name>
    <update_contact>fushinari@protonmail.com</update_contact>

    <url type="homepage">https://github.com/fushinari/Wordbook</url>
    <url type="bugtracker">https://github.com/fushinari/Wordbook/issues</url>
    <content_rating type="oars-1.1" />
    <launchable type="desktop-id">com.github.fushinari.Wordbook.desktop</launchable>

